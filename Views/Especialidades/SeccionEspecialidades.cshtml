@model IEnumerable<SistemaControlHoras.Models.especialidades>
@{
    ViewBag.Title = "Especialidades";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Gestión Especialidades</h1>
    <button onclick="abrirModal(0)" type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalEspecialidad">
        <i class="fas fa-plus"></i> Agregar Especialidad
    </button>

</div>
<hr />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col" class="text-center">Estado</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => i.idEspecialidad)</th>
                        <td class="text-uppercase">@Html.DisplayFor(modelItem => i.nombreEspecialidad)</td>
                        <td class="text-center">
                            @{
                                if (i.estadoEspecialidad == true)
                                {
                                    <span class="badge badge-success p-1">Habilitada</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary p-1">Deshabilitada</span>
                                }
                            }

                        </td>
                        <td class="text-center">
                            <button onclick="abrirModal(@Html.DisplayFor(modelItem => i.idEspecialidad))" class="btn btn-sm btn-info" data-toggle="modal" data-target="#modalEspecialidad">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="eliminarEspecialidad( @Html.DisplayFor(modelItem => i.idEspecialidad) )">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }

                

            </tbody>
        </table>
    </div>
</div>




<div class="modal fade" id="modalEspecialidad" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Especialidad</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formularioGuardarEspecialidad">
                    <div class="form-group row">
                        <label for="txtNombreEspecialidad" class="col-sm-2 col-form-label">Nombre:</label>
                        <div class="col-sm-10">
                            <input type="text" id="txtNombreEspecialidad" class="form-control text-uppercase" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-9 offset-sm-3">
                            <input type="checkbox" id="estadoEspecialidad" class="form-check-input" checked>
                            <label class="form-check-label" for="estadoEspecialidad">Habilitada</label>

                        </div>
                    </div>
                    <input type="hidden" id="idEspecialidad" value="0">

                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>
